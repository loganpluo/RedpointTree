<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/rootView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="root"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <View
        android:id="@+id/rootRedPoint"
        android:layout_width="5dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="@id/rootView"
        app:layout_constraintRight_toRightOf="@id/rootView"
        android:visibility="invisible"
        android:background="@drawable/red_point"/>

    <TextView
        android:id="@+id/level1_1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="click_level1_1"
        app:layout_constraintTop_toBottomOf="@id/rootView"/>
    <View
        android:id="@+id/level11RedPoint"
        android:layout_width="5dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="@id/level1_1_text"
        app:layout_constraintRight_toRightOf="@id/level1_1_text"
        android:visibility="invisible"
        android:background="@drawable/red_point"/>

    <TextView
        android:id="@+id/level1_2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="click_level1_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rootView"/>
    <View
        android:id="@+id/level12RedPoint"
        android:layout_width="5dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="@id/level1_2_text"
        app:layout_constraintRight_toRightOf="@id/level1_2_text"
        android:visibility="invisible"
        android:background="@drawable/red_point"/>

</android.support.constraint.ConstraintLayout>
